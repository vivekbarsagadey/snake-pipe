# Pylint configuration file
[MASTER]
init-hook='import sys; sys.path.append(".")'
jobs=1
persistent=yes
suggestion-mode=yes
unsafe-load-any-extension=no

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    W0613,  # unused-argument
    C0103,  # invalid-name (for df, etc.)
    R0801,  # duplicate-code
    W0511,  # fixme
    R0902,  # too-many-instance-attributes
    W1203,  # logging-fstring-interpolation (allow f-strings in logging)
    W0718,  # broad-exception-caught (allow general Exception catching)
    C0415,  # import-outside-toplevel (allow dynamic imports)
    W0707,  # raise-missing-from (allow simple raises)
    R1705,  # no-else-return (allow else after return for clarity)
    R1720,  # no-else-raise (allow else after raise for clarity)
    W0719,  # broad-exception-raised (allow general Exception raising)
    W0201,  # attribute-defined-outside-init (allow dynamic attributes)
    E0401,  # import-error (expected in isolated environments)
    W0621,  # redefined-outer-name (allow shadowing for common names)
    R0912,  # too-many-branches (allow complex logic)

[REPORTS]
output-format=text
reports=no
score=yes

[REFACTORING]
max-nested-blocks=5

[BASIC]
good-names=df,db,i,j,k,ex,Run,_,id,pk,fk,fn,cls,arg,args,kwargs

[FORMAT]
max-line-length=200
max-module-lines=1000
indent-string='    '

[LOGGING]
logging-format-style=new

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[SIMILARITIES]
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no
min-similarity-lines=4

[SPELLING]
spelling-dict=
spelling-ignore-words=
spelling-private-dict-file=

[TYPECHECK]
ignore-mixin-members=yes
ignored-modules=
ignored-classes=optparse.Values,thread._local,_thread._local

[VARIABLES]
allow-global-unused-variables=yes
callbacks=cb_,_cb
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_
ignored-argument-names=_.*|^ignored_|^unused_
redefining-builtins-modules=six.moves,past.builtins,future.builtins,builtins,io

[CLASSES]
defining-attr-methods=__init__,__new__,setUp,__post_init__
exclude-protected=_asdict,_fields,_replace,_source,_make
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=cls

[DESIGN]
max-args=10
max-attributes=15
max-bool-expr=5
max-branches=12
max-locals=15
max-parents=7
max-public-methods=20
max-returns=6
max-statements=50

[IMPORTS]
allow-wildcard-with-all=no
analyse-fallback-blocks=no
deprecated-modules=optparse,tkinter.tix
